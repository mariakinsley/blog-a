<!DOCTYPE html>
<html>
  <head>
    <title>BlogA</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="side-bar">
      <div id="logo">
        <%= link_to root_path do %>
        <%= image_tag"logo.jpg"  %>
        <%end%>
      </div>
      <ul>
        <li class="category">website</li>
        <li><%=link_to"Blog"<,root_path%>/li>
        <li><%= link_to"About",about_path%></li>
      </ul>
      <ul>
        <li class="category">Social</li>
        <li><a href="http://facebook.com/mariafrancia">fabebook</a></li>
        <li><a href="http://twitter.com/mariafrancia"</li>
        <li><a href="http://facebook.com/mariafrancia"</li>
        <li><a href="http://facebook.com/mariafrancia"</li>
      </ul>
      <p class="sign_in">Admin Login</p>
      </div>
      <div id="main_content">
        <div id="header">
          <% if current_page?(root_path)%>
          <p>All post</p>
          <% elsif current_page?(about_path)%>
          <p>About</p>
            <%else%>
            <%= link_to "Back to All Post",root_path%>
            <%end%>

        <div class="buttons">
        <div class="button"><%= link_to "New Post", new_path %></button>
        <button class="button">Log Out</button>
        </div>
        </div>
        <% flash each do |name, msg|%>
        <%= content_tag(:div,msg, class: "alert")%>
        <%end%>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
